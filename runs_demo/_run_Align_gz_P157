#!/bin/bash

LG3_HOME=${LG3_HOME:-/home/jocostello/shared/LG3_Pipeline}
LG3_OUTPUT_ROOT=${LG3_OUTPUT_ROOT:-/costellolab/data1/jocostello}
EMAIL=${EMAIL:-ivan.smirnov@ucsf.edu}

echo "LG3_HOME=${LG3_HOME}"
echo "LG3_OUTPUT_ROOT=${LG3_OUTPUT_ROOT}"
echo "LG3_RAW_DIR=${LG3_RAW_DIR}"
echo "EMAIL=${EMAIL}"

QSUB_ENVVARS="LG3_HOME=${LG3_HOME},LG3_OUTPUT_ROOT=${LG3_OUTPUT_ROOT},EMAIL=${EMAIL}"
QSUB_OPTS="-d ${PWD:?}"

## Override the qsub email address?
if [[ -n ${EMAIL} ]]; then
  QSUB_OPTS="${QSUB_OPTS} -M ${EMAIL}"
fi

echo "QSUB_OPTS=${QSUB_OPTS}"

## Location of output: aligned BAMs
ALIGN=${LG3_OUTPUT_DIR}/exomes

for N in 599 600 601
do
	PREFIX=Z00${N}
	FASTQ1=rawdata/${PREFIX}-trim/${PREFIX}-trim_R1.fastq.gz
	FASTQ2=rawdata/${PREFIX}-trim/${PREFIX}-trim_R2.fastq.gz

        ## Requires absolute path 
        FASTQ1=$(readlink -e "$FASTQ1")
        FASTQ2=$(readlink -e "$FASTQ2")
	
	if [ ! -r "${FASTQ1}" ] || [ ! -r "${FASTQ2"} ]; then
		echo "ERROR: Can't open $PREFIX from rawdata/"
	else
		if [ -f "${ALIGN}/${PREFIX}.trim.bwa.sorted.bam" ]; then
			echo "WARNING: already aligned: $ALIGN/${PREFIX}.trim.bwa.sorted.bam"
			echo "Skipping $PREFIX ..."
		else
		        echo "Submitting $PREFIX ..."
		        # shellcheck disable=SC2086
			qsub ${QSUB_OPTS} -N Align_$PREFIX -v "${QSUB_ENVVARS},FASTQ1=${FASTQ1},FASTQ2=${FASTQ2},PREFIX=${PREFIX}" "${LG3_HOME}/Align_fastq.pbs"
		fi
	fi
done
