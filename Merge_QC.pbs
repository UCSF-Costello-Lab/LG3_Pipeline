#!/bin/bash

### Usage: qsub -N Job_Name -v BAMS=/path/to/file1.bam:/path/to/file2.bam:...,PREFIX=sampleXX /path/to/Merge.pbs
### Output files
#PBS -e _MergeQC_${PREFIX}.err
#PBS -o _MergeQC_${PREFIX}.out
#PBS -l nodes=1:bigmem:ppn=6,vmem=40gb
#PBS -m ae

PROGRAM=${BASH_SOURCE[0]}
echo "[$(date +'%Y-%m-%d %H:%M:%S %Z')] BEGIN: $PROGRAM"
echo "Call: ${BASH_SOURCE[*]}"
echo "Script: $PROGRAM"
echo "Arguments: $*"

### Configuration
LG3_HOME=${LG3_HOME:-/home/jocostello/shared/LG3_Pipeline}
LG3_OUTPUT_ROOT=${LG3_OUTPUT_ROOT:-output}
PROJECT=${PROJECT:-LG3}
EMAIL=${EMAIL:?}
LG3_SCRATCH_ROOT=${LG3_SCRATCH_ROOT:-/scratch/${USER:?}/${PBS_JOBID}}
LG3_DEBUG=${LG3_DEBUG:-true}

### Debug
if [[ $LG3_DEBUG ]]; then
  echo "Settings:"
  echo "- LG3_HOME=$LG3_HOME"
  echo "- LG3_OUTPUT_ROOT=$LG3_OUTPUT_ROOT"
  echo "- EMAIL=${EMAIL}"
  echo "- LG3_SCRATCH_ROOT=$LG3_SCRATCH_ROOT"
  echo "- PWD=$PWD"
  echo "- USER=$USER"
  echo "- PBS_NUM_PPN=$PBS_NUM_PPN"
  echo "- hostname=$(hostname)"
fi

### Input
echo "Input:"
echo "- BAMS=${BAMS:?}"
echo "- PREFIX=${PREFIX:?}"
echo "- ILIST=${ILIST:?}"

[[ -f "$ILIST" ]] || { echo "File not found: ${ILIST}"; exit 1; }

date
mkdir -p "${LG3_SCRATCH_ROOT}/${PREFIX}"
cd "${LG3_SCRATCH_ROOT}/${PREFIX}" || { echo "ERROR: Failed to set working directory to ${LG3_SCRATCH_ROOT}/${PREFIX}"; exit 1; }

"${LG3_HOME}/scripts/Merge_QC.sh" "$BAMS" "$PREFIX" "${ILIST}"

cd "${LG3_SCRATCH_ROOT}" || { echo "ERROR: Failed to set working directory to ${LG3_SCRATCH_ROOT}"; exit 1; }

cp -a "${LG3_SCRATCH_ROOT}/${PREFIX}"/* "${LG3_OUTPUT_ROOT}/LG3/exomes_recal/${PATIENT}.before.merge" || { echo "ERROR: Failed to copy data from ${LG3_SCRATCH_ROOT}/${PREFIX}"; exit 1; }
rm -rf "${LG3_SCRATCH_ROOT:?}/${PREFIX}"

echo "Output: ${LG3_OUTPUT_ROOT}/LG3/exomes_recal/${PATIENT}.before.merge"
echo "End of script!"
date

echo "[$(date +'%Y-%m-%d %H:%M:%S %Z')] END: $PROGRAM"
